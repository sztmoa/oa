<smtLocal:BaseForm xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  x:Class="SMT.SaaS.OA.UI.UserControls.SurveyAnswer_sat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="22" Margin="0,5,10,0">
    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded" >
        <Grid.RowDefinitions>
            <RowDefinition Height="22"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition> 
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <RadioButton Style="{StaticResource RadioButtonStyle}"  x:Name="ckbSelect" Grid.Column="0" Grid.Row="0" Checked="ckbSelect_Checked" ></RadioButton>
        <TextBlock x:Name="txbAnswerContent" Grid.Column="1" Grid.Row="0"></TextBlock>
        <TextBlock x:Name="txbResultCount" Grid.Column="3" Grid.Row="0" Visibility="Collapsed"></TextBlock>       
    </Grid>
</smtLocal:BaseForm>
